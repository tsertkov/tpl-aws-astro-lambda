---
import Layout from '@/layouts/Layout.astro'

const siteUrl = Astro.site?.href
const siteHostname = Astro.site?.hostname
---
<Layout title="404 Not Found" noindex=:true>
    <header><h1>404 | File not found</h1></header>
    <p>Sorry, the page you are looking for does not exist.</p>
    <p>back to <a href={siteUrl} title={siteHostname}>{siteHostname}</a></p>
</Layout>

